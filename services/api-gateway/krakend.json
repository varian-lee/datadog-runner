{
  "_comment": "🚪 KrakenD API Gateway 설정 - Datadog Runner 프로젝트",
  "_description": "마이크로서비스 통합 API Gateway - 모든 백엔드 서비스 라우팅, OpenTelemetry 메트릭, 분산 트레이싱 지원",
  "_features": [
    "✅ 통합 API 엔드포인트 (/api/auth, /api/chat, /api/ranking, /rankings)",
    "✅ OpenTelemetry Prometheus 메트릭 (포트 9090)",
    "✅ 분산 트레이싱 헤더 전달 (Datadog + W3C Trace Context)",
    "✅ CORS 설정 및 쿠키 기반 인증 지원",
    "✅ no-op 인코딩으로 원형 응답 전달"
  ],
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "Datadog Runner API Gateway",
  "port": 8080,
  "cache_ttl": "3600s",
  "timeout": "30s",
  "extra_config": {
    "telemetry/opentelemetry": {
      "service_name": "api-gateway",
      "service_version": "0.1.0",
      "exporters": {
        "prometheus": [
          {
            "name": "krakend_metrics",
            "port": 9090,
            "listen_ip": "0.0.0.0",
            "process_metrics": true,
            "go_metrics": true
          }
        ]
      },
      "layers": {
        "global": {
          "disable_metrics": false,
          "disable_traces": false
        },
        "router": {
          "disable_metrics": false,
          "disable_traces": false,
          "metrics": {
            "detailed_connection": true,
            "round_trip": true,
            "read_payload": true,
            "static_attributes": [
              {
                "key": "layer",
                "value": "router"
              },
              {
                "key": "service_type", 
                "value": "api_gateway"
              }
            ]
          }
        },
        "proxy": {
          "disable_metrics": false,
          "disable_traces": false,
          "metrics": {
            "detailed_connection": true,
            "round_trip": true,
            "read_payload": true,
            "disable_stage": false,
            "static_attributes": [
              {
                "key": "layer",
                "value": "proxy"
              },
              {
                "key": "service_type",
                "value": "api_gateway"
              }
            ]
          }
        },
        "backend": {
          "disable_metrics": false,
          "disable_traces": false,
          "metrics": {
            "disable_stage": false,
            "round_trip": true,
            "read_payload": true,
            "detailed_connection": true,
            "static_attributes": [
              {
                "key": "layer",
                "value": "backend"
              },
              {
                "key": "backend_type",
                "value": "api_gateway"
              }
            ]
          }
        },
        "pipe": {
          "disable_metrics": false,
          "disable_traces": false,
          "metrics": {
            "detailed_connection": true,
            "round_trip": true,
            "static_attributes": [
              {
                "key": "layer",
                "value": "pipe"
              }
            ]
          }
        }
      }
    },
    "security/cors": {
      "allow_origins": ["*"],
      "allow_methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "allow_headers": [
        "*",
        "Content-Type", 
        "Authorization",
        "X-Requested-With",
        "x-datadog-trace-id",
        "x-datadog-parent-id", 
        "x-datadog-origin",
        "x-datadog-sampling-priority",
        "traceparent",
        "tracestate",
        "b3"
      ],
      "expose_headers": [
        "Content-Length", 
        "Content-Type",
        "x-datadog-trace-id",
        "x-datadog-parent-id",
        "traceparent",
        "tracestate"
      ],
      "allow_credentials": true,
      "max_age": "12h"
    }
  },
  "endpoints": [
    {
      "endpoint": "/health",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": ["auth-python-svc:8000"],
          "disable_host_sanitize": false
        }
      ],
      "extra_config": {
        "proxy": {
          "static": {
            "data": {
              "status": "ok",
              "service": "api-gateway",
              "timestamp": "2025-09-10T15:30:00Z"
            },
            "strategy": "always"
          }
        }
      }
    },
    {
      "endpoint": "/api/auth/{path}",
      "method": "GET",
      "output_encoding": "no-op",
      "input_headers": [
        "Cookie", "Authorization",
        "x-datadog-trace-id", "x-datadog-parent-id", "x-datadog-origin", "x-datadog-sampling-priority",
        "traceparent", "tracestate", "b3"
      ],
      "output_headers": [
        "Set-Cookie",
        "x-datadog-trace-id", "x-datadog-parent-id",
        "traceparent", "tracestate"
      ],
      "extra_config": {
        "github_com/devopsfaith/krakend/proxy": {
          "request_headers_to_pass": [
            "Cookie", "Authorization",
            "x-datadog-trace-id", "x-datadog-parent-id", "x-datadog-origin", "x-datadog-sampling-priority",
            "traceparent", "tracestate", "b3"
          ],
          "response_headers_to_pass": [
            "Set-Cookie",
            "x-datadog-trace-id", "x-datadog-parent-id",
            "traceparent", "tracestate"
          ]
        }
      },
      "backend": [
        {
          "url_pattern": "/auth/{path}",
          "encoding": "no-op",
          "sd": "static",
          "method": "GET",
          "host": ["auth-python-svc:8000"],
          "disable_host_sanitize": false,
          "headers_to_pass": [
            "Cookie", "Authorization",
            "x-datadog-trace-id", "x-datadog-parent-id", "x-datadog-origin", "x-datadog-sampling-priority",
            "traceparent", "tracestate", "b3"
          ]
        }
      ]
    },
    {
      "endpoint": "/api/auth/{path}",
      "method": "POST",
      "output_encoding": "no-op",
      "input_headers": [
        "Cookie", "Authorization",
        "x-datadog-trace-id", "x-datadog-parent-id", "x-datadog-origin", "x-datadog-sampling-priority",
        "traceparent", "tracestate", "b3"
      ],
      "output_headers": [
        "Set-Cookie",
        "x-datadog-trace-id", "x-datadog-parent-id",
        "traceparent", "tracestate"
